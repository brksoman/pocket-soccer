<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/medium_margin"
    android:layout_marginTop="@dimen/medium_margin"
    android:layout_marginEnd="@dimen/medium_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.Guideline
            android:id="@+id/scoreHolder_verticalHalf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <TextView
            android:id="@+id/scoreHolder_text_name1"
            style="@style/NegativeText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/scoreHolder_text_wins1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Dje" />

        <TextView
            android:id="@+id/scoreHolder_text_name2"
            style="@style/NegativeText"
            app:layout_constraintStart_toEndOf="@id/scoreHolder_text_wins2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Zaburee" />

        <TextView
            android:id="@+id/scoreHolder_text_wins1"
            style="@style/SmallNegativeText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/scoreHolder_verticalHalf"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="5" />

        <TextView
            android:id="@+id/scoreHolder_text_wins2"
            style="@style/SmallNegativeText"
            app:layout_constraintStart_toEndOf="@id/scoreHolder_verticalHalf"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="0" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>